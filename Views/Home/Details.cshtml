@model HomeDetailsViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "noimage.png");
}
    <div class="container text-center">
        <div class="container text-center col-lg-5 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h3>@Model.Employee.Name</h3>
                </div>
                <div class="card-body">
                    <img src="@photoPath" alt="Alternate Text" class="img-fluid imageThumnail" asp-append-version="true"/>
                    <h4>@Model.Employee.ID</h4>
                    <h4>@Model.Employee.Email</h4>
                    <h4>@Model.Employee.Department</h4>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Employee.ID" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
