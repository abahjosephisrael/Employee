@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid text-center">
    <div class="text-center">
        <div class="row">
       @foreach (var employee in Model)
       {
           var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");
            <div class="card m-3 col-lg-3 col-sm-12">
                <div class="card-header">
                    <h6>@employee.Name</h6>
                </div>
                <img src="@photoPath" class="card-img-top imageThumnail" alt="Alternate Text" asp-append-version="true"/>
                <div class="card-footer">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.ID" class="btn btn-primary m-1">View</a>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.ID" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger mb-2">Delete</a>
                </div>
            </div>
        }
        </div>

    </div>
</div>
